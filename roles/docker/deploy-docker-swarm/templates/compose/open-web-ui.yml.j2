# services:
  open-webui:
    image: ghcr.io/open-webui/open-webui:main
    networks:
      - local_net
    dns:
      - "{{ local_dns }}"
    volumes:
      - "{{ remote_root }}/no-backup-data/open-webui:/app/backend/data"
    environment:
      - OLLAMA_BASE_URL=http://ollama:{{ local_desktop_domain }}
    deploy:
      replicas: 1
      placement:
        constraints:
          - "node.hostname == {{ hostname_media }}"
      labels:
        - "traefik.enable=true"
        - "traefik.http.routers.open-webui.rule=Host(`ai.{{ public_top_domain }}`)"
        - "traefik.http.services.open-webui.loadbalancer.server.port=8080"
        - "traefik.http.routers.open-webui.entrypoints=websecure"
