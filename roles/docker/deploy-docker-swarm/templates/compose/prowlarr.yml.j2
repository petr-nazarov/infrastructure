services:
  prowlarr:
    image: linuxserver/prowlarr
    networks:
      - media_net
    dns:
      - "{{ local_dns }}"
    volumes:
      - "{{ remote_data }}/prowlarr:/config"
    environment:
      - PUID={{ puid }}
      - PGID={{ pgid }}
      - TZ={{ tz }}
    deploy:
      replicas: 1
      placement:
        constraints:
          - "node.hostname == {{ hostname_media }}"
      labels:
        - "traefik.enable=true"
        - "traefik.http.routers.prowlarr.rule=Host(`prowlarr.{{ local_media_domain }}`)"
        - "traefik.http.services.prowlarr.loadbalancer.server.port=9696"
        - "traefik.http.routers.prowlarr.entrypoints=web"
